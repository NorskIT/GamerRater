<Page
    x:Class="GamerRater.Application.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamerRater.Application.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Padding="15,15,15,15" Orientation="Vertical">
            <StackPanel Padding="0,0,0,15">
                <TextBlock FontSize="32" HorizontalAlignment="Center" Text="GamerRater"/>
            </StackPanel><StackPanel Padding="0,0,0,15">
                <TextBlock Text="Username"/>
                <TextBox Width="200" Name="Username"></TextBox>
            </StackPanel>
            <StackPanel Padding="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Password"/>
                    <TextBox Width="200" Name="Password"></TextBox>
                </StackPanel>
            </StackPanel>
            <Grid>
                <Button>Login</Button>
                <Button HorizontalAlignment="Right" >Cancel</Button>
            </Grid>
            <Grid Padding="0,25,0,0">
                <Button HorizontalAlignment="Right" >Register</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
